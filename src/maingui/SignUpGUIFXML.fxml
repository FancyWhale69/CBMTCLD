<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="maingui.SignUpGUIController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="30.0" styleClass="mainFxmlClass" stylesheets="@mainguifxml.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label prefHeight="55.0" prefWidth="200.0" text="CBMTCLD" textFill="#fa26a0" translateX="200.0" translateY="-70.0">
               <font>
                  <Font name="Calibri Bold" size="48.0" />
               </font>
            </Label>
            <HBox prefHeight="26.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Label text="User Name:" textFill="#fa26a0" translateX="100.0">
                     <font>
                        <Font name="Calibri Bold" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="userName" prefHeight="25.0" prefWidth="150.0" promptText="USER NAME" styleClass="text-field" stylesheets="@textFieldStyle.css" translateX="125.0" />
               </children>
            </HBox>
            <HBox prefHeight="26.0" prefWidth="600.0" spacing="22.0">
               <children>
                  <Label text="Password:" textFill="#fa26a0" translateX="112.0">
                     <font>
                        <Font name="Calibri Bold" size="18.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="password" prefHeight="25.0" prefWidth="150.0" promptText="PASSWORD" styleClass="text-field" stylesheets="@textFieldStyle.css" translateX="125.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Is a Teacher:" textFill="#fa26a0">
                     <font>
                        <Font name="Calibri Bold" size="18.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="no" mnemonicParsing="false" onAction="#visable" prefHeight="25.0" prefWidth="50.0" stylesheets="@RadioButtonStyle.css" text="NO" textFill="#fa26a0" translateX="30.0">
                     <font>
                        <Font name="Calibri Bold" size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="yes" mnemonicParsing="false" onAction="#invisable" prefHeight="25.0" prefWidth="50.0" stylesheets="@RadioButtonStyle.css" text="YES" textFill="#fa26a0" translateX="70.0">
                     <font>
                        <Font name="Calibri Bold" size="14.0" />
                     </font>
                  </RadioButton>
                  <TextField fx:id="teacherName" prefHeight="25.0" prefWidth="150.0" promptText="TEACHER NAME" styleClass="text-field" stylesheets="@textFieldStyle.css" translateX="100.0" />
               </children>
               <padding>
                  <Insets left="95.0" />
               </padding>
            </HBox>
            <HBox prefHeight="54.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#signUp" stylesheets="@BackButtonStyle.css" text="Sign Up">
                     <font>
                        <Font name="Calibri Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#back" stylesheets="@BackButtonStyle.css" text="Back">
                     <font>
                        <Font name="Calibri Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="220.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="message" prefWidth="600.0" textAlignment="CENTER" textFill="#70c1b3">
               <font>
                  <Font name="Calibri Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="80.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
